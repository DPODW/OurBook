<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ourbook.shop.mapper.paymentMapper.PaymentMapper">

    <insert id="paymentInfoSave" parameterType="com.ourbook.shop.dto.payment.PaymentInfo">
        insert into payment_info(ORDER_NUMBER,PAYMENT_NUMBER,BOOK_NAME,BOOK_ID,PAYMENT_BOOK_COUNT,PAYMENT_PRICE,BUYER_EMAIL,BUYER_NAME,RECEIVER_NAME,RECEIVER_ADDRESS,RECEIVER_PHONE_NUBMER
        ,PAYMENT_TIME)
        values(#{orderNumber},#{paymentNumber},#{bookName},#{bookId},#{paymentBookCount},#{paymentPrice},#{buyerEmail},#{buyerName},#{receiverName},
               #{receiverAddress},#{receiverPhoneNumber},#{paymentTime});
    </insert>

    <select id="findOrderNumber" resultType="com.ourbook.shop.dto.payment.PaymentInfo">
        select * from payment_info where ORDER_NUMBER = #{orderNumber};
    </select>

    <select id="findPaymentHistory" resultType="com.ourbook.shop.dto.payment.PaymentInfo">
        select * from payment_info where BUYER_EMAIL = #{email};
    </select>

</mapper>